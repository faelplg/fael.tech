{
  "name": "fael.tech",
  "version": "0.2.0",
  "description": "My personal web page project.",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss css/style.css -w",
    "serve": "live-server",
    "start": "npm-run-all --parallel serve watch:sass",
    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "concat:css": "concat -o css/style.concat.css css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.concat.css -o css/style.prefix.css",
    "windows:prefix:css": "postcss --use autoprefixer -b \"last 10 versions\" css/style.concat.css -o css/style.prefix.css",
    "compile:css": "node-sass css/style.prefix.css css/style.css",
    "compile:css:compress": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css windows:prefix:css compile:css",
    "build:css:compress": "npm-run-all compile:sass concat:css windows:prefix:css compile:css:compress",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/faelplg/fael.tech.git"
  },
  "keywords": [],
  "author": "Rafael Goulart",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/faelplg/fael.tech/issues"
  },
  "homepage": "https://github.com/faelplg/fael.tech#readme",
  "devDependencies": {
    "autoprefixer": "^9.7.4",
    "concat": "^1.0.3",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0"
  }
}
